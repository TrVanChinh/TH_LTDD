<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dong_background"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/tvStt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logogame"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/tvStt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tvTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/logogame"
        android:textColor="#E84A4A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvmota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTen"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/logogame"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmota"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/logogame" />

    <ImageView
        android:id="@+id/imgSao"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@+id/tvmota"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tvDanhGia" />

    <TextView
        android:id="@+id/tvdungluong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvmota"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/imgSao" />
</RelativeLayout>